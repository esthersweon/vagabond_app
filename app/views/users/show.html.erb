<div class="row justify-content-md-center">
  <div class="col-sm-5">
    <%=link_to image_tag("profile_pic.png"), edit_user_path %>
    <h3>Name: <%= @user.first_name %></h3>
      <% full_date = @user.created_at %>
      <% date = full_date.to_s %>
      <% month = date[5..6] %>
      <% day = date[8..9] %>
      <% year = date[0..3] %>
    <h4>Date joined: <%= "#{month}/#{day}/#{year}" %></h4>
    <h4>Current city: <%= @user.user_city %></h4>
    <%= link_to "Edit profile", edit_user_path, class: "btn btn-outline-dark" %>
    <%= link_to "Delete profile", user_path(@user), method: :delete, class: "btn btn-outline-danger" %>
  </div>

  <div class="col-sm-5">
    <h2>User posts:</h2>
      <div class="row">
        <div class="col-sm-10">
          <h4>title</h4>
        </div>
        <div class="col-sm-10">
          <% @user.posts.each do |post| %>
              <h2>Title: <%= post.title %></h2>
              <p>Content: <%= post.content %></p>
          <% end %>
        </div>
      </div>

  </div>
</div>
