<div class="row justify-content-md-center">
  <div class="col-sm-2">
    <%=link_to image_tag(@user.avatar.url(:small)), user_path(@user) %>
    <h3><%= @user.first_name %></h3>
  </div>

  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-10">
      	<h2><%= @post.title %></h2>
      	<p><%= @post.content %></p>
      </div>
    </div>
  </div>
</div>
