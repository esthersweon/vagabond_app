<div class="container main">
  <div class="row">
    <h1 class="display-5"><%= @post.city.proper_name %></h1>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%=link_to image_tag(@user.avatar.url(:original), size: "100x100"), user_path(@user) %>
      <h3>Name: <%= @user.first_name %></h3>
  		<h3>Current city: <%= @user.user_city %></h3>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-12">
        	<h2><%= @post.title %></h2>
        	<p><%= @post.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>
