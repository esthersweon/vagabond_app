<div class="container main">
  <div class="row">
    <h1 class="display-5"><%= link_to @post.city.proper_name, city_path(@post.city.name) %></h1>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%=link_to image_tag(@user.avatar.url(:original), size: "200x200", class: "profile-pic"), user_path(@user) %>
      <h3>Name: <%= @user.first_name %></h3>
  		<h4>Current city: <%= @user.user_city %></h4>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-12">
        	<h2><%= @post.title %></h2>
        	<p><%= @post.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>
