<div class="row justify-content-md-center">
  <div class="col-sm-4">
    <h1>Edit post</h1>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <%= form_for @post, url: user_path do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Post title", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "My post", class:"form-control" %>
      </div>
      <%= f.submit "Save Post", class:"btn btn-primary"  %>
    <% end %>
  </div>
</div>
